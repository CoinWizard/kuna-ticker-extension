{
    "manifest_version": 2,
    "name": "Kuna.io Exchange Ticker",
    "version": "0.1.0",
    "short_name": "Kuna Ticker",
    "description": "Лучший способ следить за ценой Bitcoin к Гривне.",
    "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "114": "/images/kuna_114.png",
        "128": "/images/kuna_128.png",
        "144": "/images/kuna_144.png",
        "258": "/images/kuna_258.png"
    },
    "background": {
        "page": "/views/background.html"
    },
    "browser_action": {
        "default_icon": {
            "144": "/images/kuna_144.png"
        },
        "default_popup": "/views/popup.html",
        "default_title": "Kuna Ticker"
    }
}