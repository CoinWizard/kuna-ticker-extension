{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "ts-build",
    "jsx": "preserve",
    "lib": [
      "es2016",
      "dom"
    ],
    "rootDirs": [
      "./src"
    ],
    "baseUrl": "./src",
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*"
  ]
}
