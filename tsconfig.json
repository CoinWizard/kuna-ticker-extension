{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "jsx": "react",
        "lib": [
            "es5",
            "es6",
            "es2015",
            "dom"
        ],
        "rootDirs": [
            "./src"
        ],
        "baseUrl": "./src",
        "outDir": "./dist/typescript",
        "strict": false,
        "allowJs": true,
        "sourceMap": true,
        "declaration": false,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "src/definitions",
            "node_modules/@types"
        ]

    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/**/*"
    ]
}